<?xml version="1.0"?>
<odoo>
    <record id="inherited_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@class='o_sale_order']/header/button[last()]" position="after">
                <button name="%(down_payment.sale_order_advance_payment_action)d"
                    string="Down Payment" type="action"
                    invisible="state != 'sale'"/>
            </xpath>
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Prev Down Payments" invisible="state != 'sale'">
                    <field name="advance_payment_ids"/>
                </page>
            </xpath>
        </field>
    </record>




</odoo>