    <record id="sale_order_advance_payment_form" model="ir.ui.view">
        <field name="name">Down Payment</field>
        <field name="model">sale.order.advance.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Down Payment">
                <group>
                    <field name="sale_order_id"/>
                    <field name="amount"/>
                    <field name="journal_id" domain="[('type', 'in', ['cash','bank'])]"/>
                    <field name="date"/>
                </group>
                    <footer>
                        <button string="Create Payment" name="action_create_payment" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Discard" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
            </form>
        </field>
    </record>
    <record id="sale_order_advance_payment_action" model="ir.actions.act_window">
        <field name="name">Down Payment</field>
        <field name="res_model">sale.order.advance.payment.wizard</field>
        <field name="view_mode">form,tree</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>